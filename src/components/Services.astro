---

<section id="services" class="space-y-24 py-10">
  <div class="space-y-8">
    <div class="pl-4 border-l-4 border-dark-gray/20">
      <h2 class="text-3xl md:text-4xl font-bold text-dark-gray">Technologies & Services</h2>
      <p class="text-soft-gray mt-2 text-lg">Solutions tailored to your needs</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map(service => (
        <div class="bg-card-bg rounded-4xl p-8 shadow-sm border border-white/50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
          <div class="w-12 h-12 bg-gray-100 rounded-2xl flex items-center justify-center text-dark-gray mb-6 group-hover:bg-dark-gray group-hover:text-white transition-colors duration-300">
            <Fragment set:html={service.icon} />
          </div>
          <h3 class="text-xl font-bold text-dark-gray mb-3">{service.title}</h3>
          <p class="text-soft-gray text-sm leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
  </div>

    <div class="bg-white/50 rounded-4xl p-8 md:p-12 border border-white/60">
        <h3 class="text-center text-2xl font-bold text-dark-gray mb-12 font-mono uppercase tracking-widest">Technology Stack</h3>


        <div class="space-y-16">
            {Object.entries(techStack).map(([category, techs]) => (
            <div class="flex flex-col items-center gap-6">
                <h4 class="text-gray-400 font-bold text-lg uppercase tracking-wide">{category}</h4>


                <div class="flex flex-wrap justify-center gap-6">
                    {techs.map(item => (
                    <div class="w-24 h-24 bg-white rounded-full shadow-md border border-gray-200 flex flex-col items-center justify-center gap-2 hover:shadow-xl hover:-translate-y-1 transition-all cursor-default">
                        <img src={item.icon} alt={item.name} class="w-10 h-10 object-contain" />
                        <span class="text-xs text-dark-gray font-semibold">{item.name}</span>
                    </div>
                    ))}
                </div>
            </div>
            ))}
        </div>
    </div>

</section>