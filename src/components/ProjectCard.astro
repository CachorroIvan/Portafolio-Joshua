---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  image: string; 
  reverse?: boolean; 
}

const { title, subtitle, description, image, reverse = false } = Astro.props;
---

<article class={`flex flex-col ${reverse ? 'md:flex-row-reverse' : 'md:flex-row'} bg-card-bg rounded-4xl p-6 md:p-8 gap-6 md:gap-8 shadow-sm hover:shadow-md transition-shadow duration-300 items-center`}>
  
  <div class="flex-1 space-y-3 md:space-y-4">
    <h3 class="font-mono text-lg md:text-xl tracking-widest uppercase text-gray-800 font-bold">
      {title}
    </h3>
    <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-black">
      {subtitle}
    </h2>
    <p class="text-soft-gray leading-relaxed text-base md:text-lg">
      {description}
    </p>
  </div>

  <div class="flex-1 w-full flex justify-center items-center bg-gray-100 rounded-3xl overflow-hidden h-[300px] md:h-[400px] border border-gray-200 relative group">
    <img 
      src={image} 
      alt={`Mockup de ${title}`} 
      class="object-cover  w-full h-full transition-transform duration-700 group-hover:scale-105"
    />
  </div>

</article>