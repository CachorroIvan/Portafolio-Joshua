---
const { hash } = Astro.url;

const navItems = [
  { name: "Home", href: "#home" },
  { name: "Proyects", href: "#projects" },
  { name: "Services and Tecnologies", href: "#services" },
  { name: "Contact", href: "#contact" },
];
---

<header class="fixed top-8 left-0 right-0 z-50 flex justify-center px-4">
  <nav class="bg-glass/90 backdrop-blur-sm px-10 py-4 rounded-full shadow-soft flex items-center gap-14 border border-white/30 transition-all duration-300">
    <div class="font-serif font-bold text-xl tracking-wider text-dark-gray opacity-80 select-none">
      vIII.
    </div>
    <ul class="hidden md:flex items-center gap-4">
      {navItems.map((item) => {
        const isActive = hash === item.href;
        return (
          <li class="relative group">
            <a 
              href={item.href}
              class:list={[
                "px-4 py-2 rounded-lg transition-all duration-300 relative inline-block",
                isActive
                  ? "text-dark-gray bg-accent-gray text-white"
                   : "text-soft-gray hover:text-dark-gray hover:bg-white/40"
              ]}
            >
              {item.name}
              <span class:list={[
                "absolute left-1/2 -bottom-0.5 h-[3px] rounded-full transition-all duration-300 bg-dark-gray",
                isActive ? "w-12 -translate-x-1/2 opacity-100" : "w-0 opacity-0 group-hover:w-12 group-hover:opacity-100 group-hover:-translate-x-1/2"
              ]}></span>
            </a>
          </li>
        );
      })}
    </ul>

  </nav>
</header>
